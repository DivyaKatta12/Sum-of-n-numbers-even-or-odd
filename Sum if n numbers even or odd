def is_even(number):
    return number % 2 == 0

def sum_of_n_numbers(n):
    total = 0
    for i in range(1, n + 1):
        num = int(input("Enter number {}: ".format(i)))
        total += num
    return total

n = int(input("Enter the value of n: "))
total_sum = sum_of_n_numbers(n)

if is_even(total_sum):
    print("The sum of the {} numbers is even.".format(n))
else:
    print("The sum of the {} numbers is odd.".format(n))
